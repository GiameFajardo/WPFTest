                                                    </StackPanel>
                                                </DockPanel>
                                                
                                            </StackPanel>
                                            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
                                                <TextBlock Text="Hire date: "/>
                                                <TextBlock Text="{Binding HireDate}"/>
