                                                        <TextBlock Text="{Binding FirstName}"/>
                                                        <TextBlock Text=" "/>
                                                        <TextBlock Text="{Binding LastName}"/>
                                                    </StackPanel>
                                                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                                        <Button Content="..." ToolTip="View student" Width="30" MaxHeight="35" BorderThickness="0"/>
